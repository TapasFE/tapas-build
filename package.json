{
  "name": "tapas-build",
  "description": "A command line tools for building React project",
  "repository": {
    "type": "git",
    "url": "https://github.com/TapasFE/tapas-build.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tsingchao/tapas-build/issues"
  },
  "homepage": "https://github.com/tsingchao/tapas-build#readme",
  "bin": {
    "tapas-build": "bin/tapas-build"
  },
  "scripts": {
    "build": "babel src -d build",
    "publish": "git push origin master --tags",
    "test": "echo \"Error: no test specified\"",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "pre-commit": [],
  "config": {
    "ghooks": {
      "commit-msg": "node ./node_modules/.bin/validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100
    }
  },
  "dependencies": {
    "autoprefixer": "^6.2.1",
    "babel-cli": "^6.3.17",
    "babel-core": "^6.5.2",
    "babel-core-resolve-enhance": "^0.1.2",
    "babel-loader": "^6.2.0",
    "babel-plugin-antd": "^0.1.3",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "babel-preset-stage-0": "^6.1.18",
    "commander": "^2.9.0",
    "connect-history-api-fallback": "^1.1.0",
    "css-loader": "^0.23.0",
    "express": "^4.13.3",
    "express-http-proxy": "^0.6.0",
    "extract-text-webpack-plugin": "^0.9.1",
    "file-loader": "^0.8.5",
    "html-webpack-plugin": "^1.7.0",
    "less": "^2.5.3",
    "less-loader": "^2.2.1",
    "portscanner": "^1.0.0",
    "postcss-loader": "^0.8.0",
    "react-transform-catch-errors": "^1.0.0",
    "react-transform-hmr": "^1.0.1",
    "redbox-noreact": "^1.0.0",
    "render-placement-loader": "https://github.com/vagusX/render-placement-loader.git",
    "resolve": "^1.1.7",
    "rimraf": "^2.4.4",
    "style-loader": "^0.13.0",
    "tapas-externals": "^0.1.5",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.9",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-hot-middleware": "^2.6.0"
  },
  "devDependencies": {
    "ghooks": "^1.0.3",
    "semantic-release": "^4.3.5",
    "validate-commit-msg": "^2.0.0"
  }
}
